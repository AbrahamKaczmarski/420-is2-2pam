<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="{{ title }}" icon="" />
    <StackLayout class="p-20">
        <Button text="Main menu" tap="{{ onMainMenu }}" class="-primary" />
        <Label text="{{ location }}" class="h1" textWrap="true" />
        <!-- <Label text="{{ message }}" class="h2 text-center" textWrap="true" /> -->
        <StackLayout id="story">
        </StackLayout>
        <StackLayout id="choices">
            <Button text="Clear" tap="{{ onClear }}" class="-primary" />
            <Button text="Next" tap="{{ onNext }}" class="-primary" />
        </StackLayout>
    </StackLayout>
</Page>
